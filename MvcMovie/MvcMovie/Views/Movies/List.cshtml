@model MvcMovie.Models.ViewModels.ListMoviesViewModel
@{
    ViewData["Title"] = "All Movies";
}
<form asp-controller="Movies" asp-action="List" method="get">
    <select asp-for="ratingID" asp-items="Model.Ratings">
        <option value="0">-- Select a rating --</option>
    </select>
    <input type="submit" value="Filter"/>
</form>
<table>
    <tr>
        <th>@(Html.DisplayNameFor(model => model.Movies[0].Title))</th>
        <th>@(Html.DisplayNameFor(model => model.Movies[0].Genre))</th>
        <th>@(Html.DisplayNameFor(model => model.Movies[0].ReleaseDate))</th>
    </tr>
    @foreach (var item in Model.Movies)
    {
        <tr>
            <td>
                <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.MovieID">
                    @(Html.DisplayFor(modelItem => item.Title))
                </a>
            </td>
            <td>@(Html.DisplayFor(modelItem => item.Genre))</td>
            <td>@(Html.DisplayFor(modelItem => item.ReleaseDate))</td>
        </tr>
    }
</table>
